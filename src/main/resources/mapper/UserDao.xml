<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bcoe.bricarbon.dao.UserDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bcoe.bricarbon.entity.UserEntity" id="userMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="encryptedPassword" column="encrypted_password"/>
        <result property="idCard" column="id_card"/>
        <result property="phoneNumb" column="phone_numb"/>
        <result property="insertedAt" column="inserted_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="participaterId" column="participater_id"/>
    </resultMap>
    
    <select id="queryUserInfo" parameterType="com.bcoe.bricarbon.vo.LoginVO" resultType="com.bcoe.bricarbon.entity.UserEntity">
    	
    	select * from user where username = #{username} and encrypted_password = #{encryptedPassword}
    	 
    </select>
    
     <select id="countUsers" resultType="java.lang.Integer">
    	select count(*) from user
    </select>


</mapper>