<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bcoe.bricarbon.dao.ParticipaterDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="com.bcoe.bricarbon.entity.ParticipaterEntity"
		id="participaterMap">
		<result property="id" column="id" />
		<result property="orgName" column="org_name" />
		<result property="orgDescription" column="org_description" />
		<result property="idCard" column="id_card"/>
		<result property="phoneNumb" column="phone_numb"/>
		<result property="insertedAt" column="inserted_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="userId" column="user_id" />
		<result property="balance" column="balance" />
		<result property="nameOnWebase" column="name_on_webase" />
		<result property="userAddress" column="user_address" />
		<result property="signUserId" column="sign_user_id"/>


	</resultMap>
	<select id="queryAll" resultType="com.bcoe.bricarbon.entity.ParticipaterEntity">
		select * from participater

	</select>

	<select id="queryByUserId" parameterType="java.lang.String"
		resultType="com.bcoe.bricarbon.entity.ParticipaterEntity">
		select * from participater where user_id = #{userId}
	</select>

</mapper>